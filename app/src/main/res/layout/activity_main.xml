<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/wrap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bg_main">

        <ImageView
            android:id="@+id/Mainlogo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:background="@drawable/logo"
            android:layout_marginTop="20dp"
            android:transitionName="transition_name"/>

        <FrameLayout
            android:id="@+id/sheet"
            android:layout_width="match_parent"
            android:layout_height="580dp"
            android:background="@drawable/bg_grey"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Visitor's Information"
                android:textColor="@color/moonlight"
                android:textSize="22sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_gravity="end"
                android:paddingStart="40dp"
                android:background="?attr/selectableItemBackground"
                android:text="Not from Sual? Tap here"
                android:textSize="12sp"/>

            <RelativeLayout
                android:layout_width="400dp"
                android:layout_height="520dp"
                android:background="@drawable/bg_red"
                android:layout_gravity="center_horizontal|bottom">

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Name (Last, First Middle)"
                    android:textColor="@color/moonlight"
                    android:textSize="16sp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp"/>

                <EditText
                    android:id="@+id/nameInput"
                    android:layout_width="340dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_input"
                    android:layout_below="@+id/text1"
                    android:layout_centerHorizontal="true"
                    android:hint="e.g. Dela Cruz, Juan D."
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"/>

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nameInput"
                    android:text="Complete Address"
                    android:textColor="@color/moonlight"
                    android:textSize="16sp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp"/>

                <EditText
                    android:id="@+id/addressInput"
                    android:layout_width="340dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_input"
                    android:layout_below="@+id/text2"
                    android:layout_centerHorizontal="true"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:hint="e.g. Las Brisas Del Mar Lot 6 Blk 10"/>

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/addressInput"
                    android:text="Barangay"
                    android:textColor="@color/moonlight"
                    android:textSize="16sp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp"/>

                <Spinner
                    android:id="@+id/brgyInput"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/text3"
                    android:layout_marginStart="30dp"
                    android:spinnerMode="dropdown"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:background="@drawable/bg_input"/>

                <TextView
                    android:id="@+id/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/brgyInput"
                    android:text="Contact Number"
                    android:textColor="@color/moonlight"
                    android:textSize="16sp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp"/>

                <EditText
                    android:id="@+id/contactInput"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_input"
                    android:layout_below="@+id/text4"
                    android:layout_marginStart="30dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:inputType="number"
                    android:hint="e.g. 09563629014"/>

                <TextView
                    android:id="@+id/text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/contactInput"
                    android:text="Email Address (optional)"
                    android:textColor="@color/moonlight"
                    android:textSize="16sp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp"/>

                <EditText
                    android:id="@+id/emailInput"
                    android:layout_width="340dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_input"
                    android:layout_below="@+id/text5"
                    android:layout_marginStart="30dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:hint="e.g. juandelacruz@gmail.com"/>

                <Button
                    android:id="@+id/nextbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next"
                    android:background="?attr/selectableItemBackground"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="26dp"/>

            </RelativeLayout>

        </FrameLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>