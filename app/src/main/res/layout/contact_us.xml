<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="600sp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="#00000000">

    <RelativeLayout
        android:id="@+id/popup_container"
        android:layout_width="400sp"
        android:layout_height="700sp"
        android:background="@drawable/bg_blacknightbtn"
        android:layout_gravity="center"
        android:paddingTop="14sp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true">

        <!-- LOGO -->
        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/final_logo" />

        <TextView
            android:id="@+id/black_sun_bg"
            android:layout_width="600sp"
            android:layout_height="900sp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_below="@id/app_logo"
            android:layout_marginTop="10sp"
            android:background="@drawable/bg_btnred"
            android:gravity="center" />

        <TextView
            android:id="@+id/contact_us_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/app_logo"
            android:fontFamily="@font/notosansjp_semibold"
            android:textColor="#fff4f0"
            android:textSize="18sp"
            android:textAlignment="center"
            android:text="Feel free to contact us!" />

        <TextView
            android:id="@+id/facebook_text"
            android:layout_width="228sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/contact_us_text"
            android:focusable="true"
            android:text="facebook.com/LGUSual"
            android:textSize="16sp"
            android:textColor="#fff4f0"
            android:fontFamily="@font/notosansjp_semibold"
            android:textAlignment="center"
            android:drawableStart="@drawable/ic_facebook"
            android:clickable="true"/>

        <TextView
            android:id="@+id/number_text"
            android:layout_width="228sp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_below="@id/email_text"
            android:text="09563629014"
            android:textSize="16sp"
            android:textColor="#fff4f0"
            android:fontFamily="@font/notosansjp_semibold"
            android:textAlignment="center"
            android:drawableStart="@drawable/ic_phone"/>

        <TextView
            android:id="@+id/email_text"
            android:layout_width="228sp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_below="@id/facebook_text"
            android:text="lgusual@yahoo.com"
            android:textSize="16sp"
            android:textColor="#fff4f0"
            android:fontFamily="@font/notosansjp_semibold"
            android:textAlignment="center"
            android:drawableStart="@drawable/ic_mail"/>

        <Button
            android:id="@+id/closebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="#fff4f0"
            android:background="@drawable/button_border"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="90dp"
            android:layout_marginBottom="20dp"
            android:paddingEnd="16dp"
            android:paddingStart="12dp"/>


    </RelativeLayout>

</RelativeLayout>