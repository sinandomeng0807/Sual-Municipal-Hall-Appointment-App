<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="2020dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="#00000000"
    android:id="@+id/reviewapp">

    <RelativeLayout
        android:id="@+id/popup_container"
        android:layout_width="400dp"
        android:layout_height="2020dp"
        android:background="@drawable/bg_blacknightbtn"
        android:layout_gravity="center"
        android:paddingTop="14sp"
        android:paddingBottom="14dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true">

        <!-- LOGO -->
        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/final_logo" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Review Appointment"
            android:textSize="16sp"
            android:layout_below="@+id/app_logo"
            android:layout_centerHorizontal="true"
            android:textColor="@color/moonlight"
            android:fontFamily="@font/notosansjp_semibold"/>

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_btnred"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <RelativeLayout
                android:id="@+id/relative"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <TextView
                    android:id="@+id/occupantview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Details"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/moonlight"
                    android:textSize="18sp"
                    android:fontFamily="@font/notosansjp_semibold"/>

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/occupantview"
                    android:text="Name:"
                    android:textColor="@color/moonlight"
                    android:layout_marginStart="32dp"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/namepreview"
                    android:layout_width="340dp"
                    android:layout_height="48dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_input"
                    android:layout_below="@id/text2"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:elevation="24dp"
                    android:textColor="@color/blackknight"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:drawableEnd="@drawable/edit"
                    android:hint="name"/>

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/namepreview"
                    android:text="Address:"
                    android:textColor="@color/moonlight"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/addresspreview"
                    android:layout_width="340dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_input"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/text3"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:elevation="24dp"
                    android:textColor="@color/blackknight"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:drawableEnd="@drawable/edit"
                    android:hint="address"/>

                <TextView
                    android:id="@+id/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/addresspreview"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:text="Barangay:"
                    android:textColor="@color/moonlight"/>

                <EditText
                    android:id="@+id/barangaypreview"
                    android:layout_width="160dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_input"
                    android:layout_below="@id/text4"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:elevation="24dp"
                    android:textColor="@color/blackknight"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:drawableEnd="@drawable/edit"
                    android:hint="barangay"/>

                <TextView
                    android:id="@+id/text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/addresspreview"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="80dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:text="Zip Code:"
                    android:textColor="@color/moonlight"/>

                <EditText
                    android:id="@+id/zippreview"
                    android:layout_width="140dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_input"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/text5"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="5dp"
                    android:elevation="24dp"
                    android:textColor="@color/blackknight"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:hint="2403"
                    android:inputType="number"
                    android:drawableEnd="@drawable/edit"/>

                <TextView
                    android:id="@+id/text6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/barangaypreview"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:text="Province:"
                    android:textColor="@color/moonlight"/>

                <EditText
                    android:id="@+id/provincepreview"
                    android:layout_width="340dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_input"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/text6"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:elevation="24dp"
                    android:textColor="@color/blackknight"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:hint="Pangasinan"
                    android:drawableEnd="@drawable/edit"/>

                <TextView
                    android:id="@+id/text7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Number:"
                    android:layout_below="@id/provincepreview"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/moonlight"/>

                <EditText
                    android:id="@+id/numberpreview"
                    android:layout_width="180dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_input"
                    android:layout_below="@id/text7"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:elevation="24dp"
                    android:textColor="@color/blackknight"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:drawableEnd="@drawable/edit"
                    android:inputType="number"
                    android:hint="number"/>

                <TextView
                    android:id="@+id/text8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email:"
                    android:layout_below="@id/numberpreview"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/moonlight"/>

                <EditText
                    android:id="@+id/emailpreview"
                    android:layout_width="340dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_input"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/text8"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:elevation="24dp"
                    android:textColor="@color/blackknight"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:drawableEnd="@drawable/edit"
                    android:hint="email"/>

                <TextView
                    android:id="@+id/appointmentdetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/emailpreview"
                    android:text="Appointment Details"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="14dp"
                    android:textColor="@color/moonlight"
                    android:textSize="18sp"
                    android:fontFamily="@font/notosansjp_semibold"/>

                <TextView
                    android:id="@+id/text9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/appointmentdetails"
                    android:text="Date:"
                    android:layout_marginStart="32dp"
                    android:textSize="16sp"
                    android:textColor="@color/moonlight"/>

                <Button
                    android:id="@+id/datepreview"
                    android:layout_width="160dp"
                    android:layout_height="48dp"
                    android:layout_below="@+id/text9"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentStart="true"
                    android:textSize="16sp"
                    android:hint="Date"
                    android:textColor="@color/blackknight"
                    android:background="@drawable/bg_input"
                    android:drawableEnd="@drawable/edit"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"/>

                <TextView
                    android:id="@+id/text10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/appointmentdetails"
                    android:layout_alignParentEnd="true"
                    android:text="Time:"
                    android:layout_marginEnd="120dp"
                    android:textSize="16sp"
                    android:textColor="@color/moonlight"/>

                <Button
                    android:id="@+id/timepreview"
                    android:layout_width="160dp"
                    android:layout_height="48dp"
                    android:layout_below="@+id/text9"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentEnd="true"
                    android:hint="Time"
                    android:textSize="16sp"
                    android:textColor="@color/blackknight"
                    android:textColorHint="@color/lightgrey"
                    android:background="@drawable/bg_input"
                    android:drawableEnd="@drawable/edit"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"/>

                <TextView
                    android:id="@+id/text11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/datepreview"
                    android:text="Office:"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="32dp"
                    android:textColor="@color/moonlight"/>

                <Spinner
                    android:id="@+id/officepreview"
                    android:layout_width="340dp"
                    android:layout_height="56dp"
                    android:layout_below="@id/text11"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:spinnerMode="dialog"
                    android:paddingStart="10dp"
                    android:paddingEnd="18dp"
                    android:textColor="@color/blackknight"
                    android:background="@drawable/spinner_bg"
                    android:elevation="24dp"/>

                <TextView
                    android:id="@+id/text12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/officepreview"
                    android:text="Purpose:"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="32dp"
                    android:textColor="@color/moonlight"/>

                <Spinner
                    android:id="@+id/purposepreview"
                    android:layout_width="340dp"
                    android:layout_height="56dp"
                    android:layout_below="@id/text12"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:spinnerMode="dialog"
                    android:paddingStart="10dp"
                    android:paddingEnd="18dp"
                    android:textColor="@color/blackknight"
                    android:background="@drawable/spinner_bg"
                    android:elevation="24dp"/>

                <TextView
                    android:id="@+id/text13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/purposepreview"
                    android:text="Other:"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginStart="38dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/otherpreview"
                    android:layout_width="340dp"
                    android:layout_height="140dp"
                    android:background="@drawable/bg_input"
                    android:layout_below="@+id/text13"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="30dp"
                    android:textColor="@color/blackknight"
                    android:inputType="textMultiLine"
                    android:hint="other purpose of visit"
                    android:textColorHint="@color/lightgrey"
                    android:elevation="24dp"
                    android:gravity="top"
                    android:padding="12dp"
                    android:minLines="6"/>

                <TextView
                    android:id="@+id/iddetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/otherpreview"
                    android:text="ID Details"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="14dp"
                    android:textColor="@color/moonlight"
                    android:textSize="18sp"
                    android:fontFamily="@font/notosansjp_semibold"/>

                <TextView
                    android:id="@+id/text14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Front ID"
                    android:textSize="16sp"
                    android:textColor="@color/moonlight"
                    android:layout_below="@+id/iddetails"
                    android:layout_marginStart="32dp"/>
                
                <ImageView
                    android:id="@+id/frontIDpreview"
                    android:layout_width="340dp"
                    android:layout_height="200dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/text14"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/text15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Back ID"
                    android:textSize="16sp"
                    android:textColor="@color/moonlight"
                    android:layout_below="@+id/frontIDpreview"
                    android:layout_marginStart="32dp"/>

                <ImageView
                    android:id="@+id/backIDpreview"
                    android:layout_width="340dp"
                    android:layout_height="200dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/text15"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/text16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Selfie"
                    android:textSize="16sp"
                    android:textColor="@color/moonlight"
                    android:layout_below="@+id/backIDpreview"
                    android:layout_marginStart="32dp"/>

                <ImageView
                    android:id="@+id/selfiepreview"
                    android:layout_width="340dp"
                    android:layout_height="200dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/text16"/>
                
                <Button
                    android:id="@+id/submitbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/selfiepreview"
                    android:layout_marginTop="16dp"
                    android:padding="10dp"
                    android:layout_centerHorizontal="true"
                    android:text="Submit Appointment"
                    android:textColor="@color/moonlight"
                    android:background="@drawable/button_border"
                    android:textSize="16sp"
                    android:textAllCaps="false"/>

            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>

</RelativeLayout>